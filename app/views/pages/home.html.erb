
<div class="flexbox">
<!-- Carousel
================================================== -->
<div class="carousel slide" id ="slider" data-ride="carousel1">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li class="active" data-slide-to="0" data-target="#slider"></li>
    <li data-slide-to="1" data-target="#slider"></li>
    <li data-slide-to="2" data-target="#slider"></li>
  </ol>

  <div class="carousel-inner">
    <div class="item active" id="item1">
      <img src="https://cdn.downunderendeavours.com/wp-content/uploads/2014/08/D112-hero2000x837-Namale_Villas_CivaDuavata_InfinityPool.jpg "style="height: 100%">
    </div>

    <div class="item" id="item2">
         <img src="https://images.unsplash.com/photo-1445546857131-5fc39d1c51f0?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=15c18779cdcf2add3f86f6f2a8e37a14&auto=format&fit=crop&w=1188&q=80" style="height: 100%">
    </div>

    <div class="item">
       <img src="https://images.unsplash.com/photo-1524319084528-fd69c1846f2a?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=aab8911eaf98f4375c99fab2d40f5ad6&auto=format&fit=crop&w=1074&q=80" style="height: 100%">
    </div>
  </div>

  <h1>EXPLORE AND ESCAPE</h1>
  <h3>Plan your luxury holiday with the activities you love</h3>

  <div class="search-form">
          <%= form_tag(resorts_path, method: :get) do %>
          <%= text_field_tag :location, nil, placeholder: 'Where?' %>
          <%= text_field_tag :feature, nil, placeholder: 'What activity?' %>
          <%= submit_tag 'Search', name: nil, class:"submit" %>
          <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#slider" data-slide="prev" role="button"><span class=" icon-prev"></span></a>


 <a class="right carousel-control" href="#slider" data-slide="next" role="button"><span class=" icon-next"></span></a>

</div>
</div>


