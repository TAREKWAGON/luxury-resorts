<div class="container-top-show-resort">
  <div class="row">
    <div class="hidden-sm-down col-md-6 col-lg-4">
      <div class="resort-name">
        <div class="resort-address">
          <p> Resort in <%= @resort.address %></p>
        </div>
        <div class="stars">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
        </div>
        <h3> <%=  @resort.name %> </h3>
      </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-8">

      <div class="resort-picture" style=" background-image: url(<%= image_path @resort.image %>);">
        <% if current_user %>
          <% if current_user.likes?(@resort) %>
            <%= link_to favorite_resort_path(@resort, resort_id: @resort), method: :delete do %>
              <%= icon("fas", "heart") %>
            <% end %>
          <% else %>
            <%= link_to favorite_resorts_path(resort_id: @resort), method: :post do %>
              <%= icon("far", "heart") %>
            <% end %>
          <% end %>
          <% end  %>
      <!--   <i class="far fa-heart"></i> -->

     <!--  <div class="resort-picture" style=" background-image: url(<%= image_path @resort.image %>);">
        <i class="far fa-heart"></i>
        <i class="far fa-share-square"></i>
 -->
      </div>
    </div>
  </div>
</div>


